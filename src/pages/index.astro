---
import HeroSlider from '../components/HeroSlider.astro';
import Header from '../components/Header.astro';
import ServicesParallax from '../components/ServicesParallax.astro';
import Layout from '../layouts/Layout.astro';

// Ejemplo de slides personalizados
const customSlides = [
  {
    title: "Slide Personalizado 1",
    subtitle: "Este es el primer slide con fondo personalizado",
    backgroundColor: "bg-gradient-to-br from-indigo-600 to-purple-800"
  },
  {
    title: "Slide Personalizado 2",
    subtitle: "Segundo slide con otro gradiente",
    backgroundColor: "bg-gradient-to-br from-emerald-600 to-cyan-700"
  },
  {
    title: "Slide Personalizado 3",
    subtitle: "Tercer slide completando el ciclo",
    backgroundColor: "bg-gradient-to-br from-rose-600 to-pink-700"
  }
];
---

<Layout title="Inicio" description="Nnova Designs - Profesionales con Durlock en Paraguay" keywords="Durlock Paraguay, Instalación Durlock, Empresa trabajos drywall, Profesionales en Durlock">
	<!-- Header fijo -->
	<Header />
	
	<!-- Hero Slider con configuración por defecto (cambia cada 5 segundos) -->
	<HeroSlider />
	
	<!-- Slogan Section -->
	<section class="py-16 px-4 bg-white">
		<div class="max-w-4xl mx-auto text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-gray-900">Creamos espacios excepcionales</h2>
			<p class="text-lg md:text-xl text-gray-600 leading-relaxed">
				En Nnova Designs combinamos experiencia, calidad y creatividad para transformar tus ideas en realidad. 
				Cada proyecto es único y merece nuestra dedicación completa.
			</p>
		</div>
	</section>

	<!-- Services Parallax Section -->
	<ServicesParallax />
</Layout>
