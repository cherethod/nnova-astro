---
import HeroSlider from '../components/Hero/HeroSlider.astro';
import Header from '../components/Header/Header.astro';
import ServicesParallax from '../components/Services/ServicesParallax.astro';
import Layout from '../layouts/Layout.astro';
import Principles from '../components/Principles.astro';
import { FaqsComponent } from '../components/FaqsComponents';
import FooterComponent from '../components/FooterComponent.astro';


---

<Layout title="Inicio" description="Nnova Designs - Profesionales con Durlock en Paraguay" keywords="Durlock Paraguay, Instalación Durlock, Empresa trabajos drywall, Profesionales en Durlock">
	<!-- Header fijo -->
	<Header />
	
	<!-- Hero Slider con configuración por defecto (cambia cada 5 segundos) -->
	<HeroSlider />
	
	<!-- Slogan Section -->
	<section class="py-16 px-4 bg-white">
		<div class="max-w-4xl mx-auto text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-8 text-gray-900">Creamos espacios excepcionales</h2>
			<p class="text-lg md:text-xl text-gray-600 leading-relaxed">
				En Nnova Designs combinamos experiencia, calidad y creatividad para transformar tus ideas en realidad. 
				Cada proyecto es único y merece nuestra dedicación completa.
			</p>
		</div>
	</section>

	<!-- Services Parallax Section -->
	<ServicesParallax />
	<Principles />
	<FaqsComponent client:load/>
	<FooterComponent />
</Layout>
