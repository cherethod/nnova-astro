---
import ServicesComponent from './ServicesComponent';

// Props del componente
export interface Props {
  services?: Array<{
    title: string;
    description: string;
    image: string;
    buttonText?: string;
    buttonLink?: string;
  }>;
}

const { 
  services = [
    {
      title: "Instalación de Drywall",
